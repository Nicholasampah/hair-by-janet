<section class="admin-area">
    <div class="container">
        <h1>Admin Dashboard</h1>
        
        <div class="admin-tabs">
            <button class="tab-btn active" data-tab="services">Services</button>
            <button class="tab-btn" data-tab="gallery">Gallery</button>
        </div>

        <!-- Services Tab -->
        <div class="tab-content active" id="services-tab">
            <div class="admin-section">
                <h2>Manage Service Categories</h2>
                
                <div class="add-category-form">
                    <h3>Add New Category</h3>
                    <input type="text" id="newCategoryName" placeholder="Category Name (e.g., Hair Cuts)">
                    <button class="btn" onclick="addCategory()">Add Category</button>
                </div>

                <div id="categoriesList" class="categories-list">
                    <!-- Categories will be loaded here -->
                </div>
            </div>
        </div>

        <!-- Gallery Tab -->
        <div class="tab-content" id="gallery-tab">
            <div class="admin-section">
                <h2>Manage Gallery</h2>
                
                <div class="add-image-form">
                    <h3>Add New Image</h3>
                    <div class="upload-area" id="uploadArea">
                        <input type="file" id="imageUpload" accept="image/*" onchange="handleImageUpload(event)">
                        <label for="imageUpload" class="upload-label">
                            <span class="upload-icon">ðŸ“·</span>
                            <span>Click to upload or drag & drop</span>
                            <span class="upload-hint">JPG, PNG, GIF, WEBP (Max 10MB)</span>
                        </label>
                    </div>
                    <input type="text" id="newImageAlt" placeholder="Image Description (optional)">
                    <div id="uploadPreview" class="upload-preview"></div>
                    <button class="btn" id="addImageBtn" onclick="addGalleryImage()" disabled>Add Image</button>
                </div>

                <div id="galleryList" class="gallery-admin-grid">
                    <!-- Gallery images will be loaded here -->
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Edit Category Modal -->
<div class="modal" id="editCategoryModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Edit Category</h3>
            <button class="modal-close" onclick="closeModal('editCategoryModal')">&times;</button>
        </div>
        <div class="modal-body">
            <input type="hidden" id="editCategoryIndex">
            <label>Category Name</label>
            <input type="text" id="editCategoryName" placeholder="Category Name">
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('editCategoryModal')">Cancel</button>
            <button class="btn" onclick="saveCategory()">Save Changes</button>
        </div>
    </div>
</div>

<!-- Edit Service Modal -->
<div class="modal" id="editServiceModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Edit Service</h3>
            <button class="modal-close" onclick="closeModal('editServiceModal')">&times;</button>
        </div>
        <div class="modal-body">
            <input type="hidden" id="editServiceCatIndex">
            <input type="hidden" id="editServiceIndex">
            <label>Service Name</label>
            <input type="text" id="editServiceName" placeholder="Service Name">
            <label>Price (â‚µ)</label>
            <input type="number" id="editServicePrice" placeholder="Price">
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('editServiceModal')">Cancel</button>
            <button class="btn" onclick="saveService()">Save Changes</button>
        </div>
    </div>
</div>

<!-- Edit Image Modal -->
<div class="modal" id="editImageModal">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Edit Image</h3>
            <button class="modal-close" onclick="closeModal('editImageModal')">&times;</button>
        </div>
        <div class="modal-body">
            <input type="hidden" id="editImageIndex">
            <input type="hidden" id="editImageCurrentSrc">
            
            <label>Replace Image (optional)</label>
            <div class="upload-area small">
                <input type="file" id="editImageUpload" accept="image/*" onchange="handleEditImageUpload(event)">
                <label for="editImageUpload" class="upload-label">
                    <span>Click to upload new image</span>
                </label>
            </div>
            
            <label>Description</label>
            <input type="text" id="editImageAlt" placeholder="Image Description">
            
            <div class="image-preview" id="editImagePreview"></div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" onclick="closeModal('editImageModal')">Cancel</button>
            <button class="btn" onclick="saveImage()">Save Changes</button>
        </div>
    </div>
</div>
